@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole<int>>

@{
    ViewData["Title"] = "Role List";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-6">
            <a class="btn btn-primary" asp-controller="Role" asp-action="Create">Create Role</a>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-secondary" asp-controller="Administration" asp-action="Index">Back to account Manage</a>
        </div>
    </div>

    <h2 class="mb-4 text-center">User List</h2>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Role Name</th>
                    <th scope="col" class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td class="text-center">
                            @* <a href="@Url.Action("Create", "Role", new { id = role.Id })" class="btn btn-warning btn-space btn-sm">Edit</a> *@
                            <a href="@Url.Action("Delete", "Role", new { id = role.Id })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
